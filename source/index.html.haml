    .sectors.col-xs-12.visible-xs
      %hr/
      - 9.times.each do |s|
        - sec = data.slides.sectors[s]
        %a{:type=>"button", "data-toggle"=>"modal", "data-target"=>"##{sec}-modal-xs"}
          .sector
            %img{:src => lorem.image('100x100')}
            %span #{sec}
        .modal{:id => "#{sec}-modal-xs", :role =>"dialog"}
          .modal-dialog
            .modal-content
              .modal-header
                %a.close{:type=>"button", "data-dismiss"=>"modal"} &times;
