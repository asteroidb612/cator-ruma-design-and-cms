                    %li{"data-target"=>"#{sec}-Carousel-xs", "data-slide-to"=>"3"}
                  .carousel-inner{:role => "listbox"}
                    - 4.times.each do |i|
                      .item{:class=>("active" if i == 0)}
                        %img{:src => lorem.image('900x600', :text => "#{sec} Image #{i+1}", :random_color => true)}
                        .carousel-caption
                          %div = "#{sec} Caption #{i+1}"
                          %div = lorem.sentence
                          %div = lorem.sentence
                %a.left.carousel-control{:href => "##{sec}-Carousel-xs", :role=>"button","data-slide" => "prev"} 
